            <div class="table-grid" data-aos="fade-left">
                @{
                    if (table == 1)
                    {
                        <div class="boardActive"><a @onclick="() => changeTable(1)"><p class="pointer">Aktiviteter</p></a></div>
                        <div><a @onclick="() => changeTable(2)"><p class="pointer">Rom</p></a></div>
                        <div><a @onclick="() => changeTable(3)"><p class="pointer">Utstyr</p></a></div>
                    }
                    if (table == 2)
                    {
                        <div><a @onclick="() => changeTable(1)"><p class="pointer">Aktiviteter</p></a></div>
                        <div class="boardActive pointer"><a @onclick="() => changeTable(2)"><p class="pointer">Rom</p></a></div>
                        <div><a @onclick="() => changeTable(3)"><p class="pointer">Utstyr</p></a></div>
                    }
                    if (table == 3)
