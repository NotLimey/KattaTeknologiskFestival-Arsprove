                        <div><a @onclick="() => changeTable(2)"><p class="pointer">Rom</p></a></div>
                        <div class="boardActive pointer"><a @onclick="() => changeTable(3)"><p class="pointer">Utstyr</p></a></div>
                    }

                }
            </div>

            <div class="line-bottom"></div>
            @if (table == 1)
            {<TableGrid grid1="Aktivitet" grid9="Påmeldte" grid10="Rom" />}
            @if (table == 2)
            {<TableGrid grid1="Rom" grid5="Status" />}
            @if (table == 3)
            {<TableGrid grid1="Utstyr" grid5="Opptatt Utstyr" />}

            <div>
                @if (table == 1)
                {
                    if (activities != null)
                    {
                        foreach (var a in activities)
                        {
                            var b = a.TakenSpots + " / " + a.AvailableSpots;

                            <div data-aos="fade-left" @onclick="() => inspectItem(1, a.Id)"><Activity_card Class1="dont-center p-l-40" Class2="no-break" Link="#" grid1="@a.Name" grid9="@b" grid10="@a.RoomId.ToString()" /></div>
                        }
                    }
                }
                @if (table == 2)
                {
                    if (rooms != null)
                    {
                        foreach (var r in rooms)
                        {
                            var b = "";
                            if (r.RoomTaken) { b = "Opptatt"; } else { b = "Ledig"; }
                            <div data-aos="fade-left" @onclick="() => inspectItem(2, r.RoomId)"><Activity_card Link="#" grid1="@r.RoomId.ToString()" grid5="@b" /></div>
                        }
                    }
                }
                @if (table == 3)
                {
                    if (equipments != null)
                    {
                        foreach (var e in equipments)
                        {
                            var b = e.TakenUnits + " / " + e.AvailableUnits;
                            <div data-aos="fade-left" @onclick="() => inspectItem(3, e.Id)"><Activity_card Link="#" grid1="@e.Name" grid5="@b" /></div>
                        }
                    }
                }

            </div>
        </div>
    </section>
